<% const title = 'Attendance' %>
<%- include('../layout', { title, user, body: `
<div class="attendance-page">
    <div class="page-header">
        <h1>Attendance Management</h1>
        ${!todayAttendance ? `
            <form method="POST" action="/user/mark-attendance" style="display: inline;">
                <button type="submit" class="btn btn-primary">Mark Today's Attendance</button>
            </form>
        ` : `
            <div class="alert alert-success">
                You have already marked attendance for today (${new Date(today).toLocaleDateString()})
            </div>
        `}
    </div>
    
    <div class="table-container">
        <h2>Attendance History</h2>
        <table class="data-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Marked At</th>
                </tr>
            </thead>
            <tbody>
                ${attendance.map(att => `
                    <tr>
                        <td>${new Date(att.date).toLocaleDateString()}</td>
                        <td><span class="status status-${att.status}">${att.status}</span></td>
                        <td>${new Date(att.created_at).toLocaleString()}</td>
                    </tr>
                `).join('')}
            </tbody>
        </table>
        
        ${attendance.length === 0 ? '<p class="no-data">No attendance records found.</p>' : ''}
    </div>
</div>
` }) %>
